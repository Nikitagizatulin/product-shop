extends layout

block content
    -function prettyDate(dateString) {
    -var date = new Date(dateString);
    -return (date.getMonth() + 1) + '/' + date.getDate() + '/' +  date.getFullYear();
    -}
    .container-fluid.mt-5
        if success
            .alert.alert-success
                strong=success
        .card
            .card-header
                i.fa.fa-table
                |   #{title}
            .card-body
                if data&&data.length!=0
                    table.table.table-striped.table-hover
                        thead
                            tr
                                th(style="width:10%") #
                                th(style="width:30%") Title
                                th(style="width:30%") Description
                                th(style="width:10%") Price
                                th(style="width:20%") Create data
                        tbody
                            - var i = 1;
                            each product in data
                                tr
                                    td=i++
                                    td= product.title
                                    td= product.description
                                    td= product.price
                                    td #{prettyDate(product.created_at)}

                else
                    div.alert.alert-warning.font-weight-bold(role="alert") No yet product!